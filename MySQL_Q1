select * from empl;

-- Q1 --
-- A --
Select ename as 'Employee Name' , sal as 'Salary' from empl where (sal>=2200);

-- B --
select * from empl where comm is null;

-- C --
select ename as 'Employee Name' , sal as 'Salary' from empl where 
sal between 2500 and 4000;

-- D -- 
select ename as 'Name', job as 'job title', sal as 'salary' from empl where 
mgr is null;

-- E -- 
select ename as 'Name' from empl where 
substring(ename , 3, 1) ='a';

-- F --
select ename as 'name' from empl where 
ename like '%t';


