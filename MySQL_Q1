create database task;


use task;

create table Empl ( empno Integer Primary key, 
					ename varchar(20),
                    job varchar(15),
                    mgr integer,
                    hiredate date,
                    sal decimal(7,2),
                    comm decimal (7,2),
                    deptno Integer);

